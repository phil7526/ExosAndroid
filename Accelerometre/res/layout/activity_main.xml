<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="com.example.accelerometre.MainActivity" >

	<TextView
		android:id="@+id/textView2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/hello_world" />

	<TextView
		android:id="@+id/tvCalibreTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/tvCalibreTxt"
		android:layout_below="@+id/textView2"
		android:layout_marginTop="18dp"
		android:text="Calibre:" />

	<TextView
		android:id="@+id/tvY"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/tvX"
		android:layout_below="@+id/tvX"
		android:layout_marginTop="46dp"
		android:text="Value Y" />

	<TextView
		android:id="@+id/tvZ"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/tvY"
		android:layout_below="@+id/tvY"
		android:layout_marginTop="54dp"
		android:text="Value Z" />

	<TextView
		android:id="@+id/textView3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBaseline="@+id/tvY"
		android:layout_alignBottom="@+id/tvY"
		android:layout_alignRight="@+id/textView1"
		android:text="Y:" />

	<TextView
		android:id="@+id/textView4"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/tvZ"
		android:layout_alignRight="@+id/textView3"
		android:text="Z:" />

	<TextView
		android:id="@+id/textView1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/tvCalibreTxt"
		android:layout_below="@+id/tvCalibre"
		android:layout_marginTop="22dp"
		android:text="X:" />

	<TextView
		android:id="@+id/tvX"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBaseline="@+id/textView1"
		android:layout_alignBottom="@+id/textView1"
		android:layout_toRightOf="@+id/tvCalibreTxt"
		android:text="Value X" />

	<TextView
		android:id="@+id/tvCalibre"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBaseline="@+id/tvCalibreTxt"
		android:layout_alignBottom="@+id/tvCalibreTxt"
		android:layout_alignLeft="@+id/tvX"
		android:layout_marginLeft="15dp"
		android:text="Value C" />

	<TextView
		android:id="@+id/tvListRef"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/textView4"
		android:layout_below="@+id/tvZ"
		android:layout_marginTop="24dp"
		android:text="Capteurs :" />

	<TextView
		android:id="@+id/tvListeCapteurs"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBaseline="@+id/tvListRef"
		android:layout_alignBottom="@+id/tvListRef"
		android:layout_toRightOf="@+id/tvListRef"
		android:scrollHorizontally="true"
		android:scrollbarAlwaysDrawVerticalTrack="true"
		android:text="TextView" />

	<ListView
		android:id="@+id/listCapteurs"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/tvListRef"
		android:layout_below="@+id/tvListRef"
		android:layout_marginTop="14dp" >
	</ListView>

</RelativeLayout>